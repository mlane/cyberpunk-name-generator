import { generateIdentityId } from 'src/utils'
import '../global.css'

const identityId = generateIdentityId()
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/png' href='/favicon.ico' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='generator' content={Astro.generator} />
    <title>Cyberpunk Name Generator – AI-Powered Cyberpunk Alias Creator</title>
    <meta
      name='description'
      content='Instantly generate unique cyberpunk names and futuristic lore. AI-powered cyberpunk alias generator for RPGs, writers, and worldbuilders.'
    />
